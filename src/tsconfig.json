{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../output",
    "target": "es6",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "typeRoots": [
      "../output/node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "importHelpers": true,
    "listFiles": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*" : ["../output/node_modules/*", "*"]
    },
    "lib": [
      "es2015",
      "dom",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}